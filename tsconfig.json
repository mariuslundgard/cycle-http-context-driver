{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "ES5",
    "outDir": "lib/",
    "noLib": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "convertTabsToSpaces": true
  },
  "files": [
    "./src/http-context-driver.ts",
    "./src/transport/http.ts",
    "./test/helpers.ts",
    "./test/http-context-driver.test.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
